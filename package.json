{
	"name": "handlexbars",
	"description": "Handlexbars Visual Studio Code",
	"version": "0.1.0",
	"publisher": "ogranada",
	"engines": {
		"vscode": "^0.10.1"
	},
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/ogranada-xk/vscode-handlexbars"
	},
	"galleryBanner": {
		"color": "#0F6378",
		"theme": "dark"
	},
	"categories": [
		"Languages",
		"Snippets"
	],
	"contributes": {
		"languages": [{
			"id": "handlexbars",
			"aliases": ["Handlebars", "handlebars", "handlexbars"],
			"extensions": [".handlebars",".hbs",".tpl", ".handlexbars", ".hdxbs"],
			"configuration": "./handlexbars.configuration.json"
		}],
		"grammars": [{
			"language": "handlexbars",
			"scopeName": "text.html.handlebars",
			"path": "./syntaxes/handlexbars.tmLanguage"
		}],
		"snippets": [
			{
				"language": "handlexbars",
				"path": "./snippets/snippets.json"
			}
		]
	}
}
